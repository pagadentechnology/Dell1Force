<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/ed_name_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Store Name"
            android:padding="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="@color/bg_black" />
        
         <EditText
            android:id="@+id/ed_name_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brand Name"
            android:padding="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="@color/bg_black" />
         
         <EditText
            android:id="@+id/ed_name_program"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Programme Name"
            android:padding="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="@color/bg_black" />
         
         <TableLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             
             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="Campaign Start"
                     android:textSize="18sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/tv_date_start"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:text="YYYY-MM-dd" />
                 

                 <ImageButton
                     android:id="@+id/btn_date_start"
                     android:layout_width="48dp"
                     android:layout_height="48dp"
                     android:layout_weight="3"
                     android:background="@android:color/transparent"
                     android:padding="5dp"
                     android:scaleType="centerInside"
                     android:src="@drawable/img_date_from"
                      />
             </TableRow>
             
             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="Campaign Finish"
                     android:textSize="18sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/tv_date_finish"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:text="YYYY-MM-dd" />

                 <ImageButton
                     android:id="@+id/btn_date_finish"
                     android:layout_width="48dp"
                     android:layout_height="48dp"
                     android:layout_weight="3"
                     android:background="@android:color/transparent"
                     android:padding="5dp"
                     android:scaleType="centerInside"
                     android:src="@drawable/img_date_to" />
             </TableRow>
             

         </TableLayout>
         
         <EditText
            android:id="@+id/ed_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Remarks"
            android:padding="10dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="@color/bg_black" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/selector_blue"
            android:padding="10dp"
            android:text="Input Image"
            android:textColor="@color/bg_white" />
    </LinearLayout>
    
    

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wrapper"
        android:id="@+id/wrapper_horizontalview"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp" >

            <ImageView
                android:id="@+id/img_00"
                android:layout_width="100dp"
                android:layout_height="170dp"
                
                android:padding="5dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/img_01"
                android:layout_width="100dp"
                android:layout_height="170dp"
                
                android:padding="5dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/img_02"
                android:layout_width="100dp"
                android:layout_height="170dp"
                
                android:padding="5dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/img_03"
                android:layout_width="100dp"
                android:layout_height="170dp"
                
                android:padding="5dp"
                android:visibility="invisible" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>