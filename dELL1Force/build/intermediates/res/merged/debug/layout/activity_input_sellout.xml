<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Promotor"
                        android:textColor="@android:color/darker_gray"
                        android:enabled="false"
                        android:singleLine="true" />

                    <Spinner
                        android:id="@+id/spinner_salesman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:entries="@array/level"
                        android:prompt="@array/level" />
                </LinearLayout>

                <EditText
                    android:id="@+id/ed_servicetag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Service Tag"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/bg_black" />

                <EditText
                    android:id="@+id/ed_priceIdr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price IDR"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/bg_black" />

                <EditText
                    android:id="@+id/ed_priceUsd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price USD"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/bg_black" />
                
                <TableLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             
             <TableRow
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical" >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="Sell Out Date"
                     android:textSize="18sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/tv_date_transaction"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:text="dd/MM/YYYY" />
                 

                 <ImageButton
                     android:id="@+id/btn_date_transaction"
                     android:layout_width="48dp"
                     android:layout_height="48dp"
                     android:layout_weight="3"
                     android:background="@android:color/transparent"
                     android:padding="5dp"
                     android:scaleType="centerInside"
                     android:src="@drawable/img_date_from"
                      />
             </TableRow>
             
             
             

         </TableLayout>

                <LinearLayout
                    android:id="@+id/wrapper_other1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/ed_other1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="Others 1"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/bg_black"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/btn_other1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/img_btn_add" />

                    <ImageView
                        android:id="@+id/btn_other1_delete"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/img_btn_delete"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wrapper_other2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <EditText
                        android:id="@+id/ed_other2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_weight="2"
                        android:hint="Others 2"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/bg_black" />

                    <ImageView
                        android:id="@+id/btn_other2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/img_btn_add" />

                    <ImageView
                        android:id="@+id/btn_other2_delete"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/img_btn_delete"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wrapper_other3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <EditText
                        android:id="@+id/ed_other3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_weight="2"
                        android:hint="Others 3"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/bg_black" />

                    <ImageView
                        android:id="@+id/btn_other3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/img_btn_add" />

                    <ImageView
                        android:id="@+id/btn_other3_delete"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/img_btn_delete"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wrapper_other4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <EditText
                        android:id="@+id/ed_other4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_weight="2"
                        android:hint="Others 4"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/bg_black" />

                    <ImageView
                        android:id="@+id/btn_other4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/img_btn_add" />

                    <ImageView
                        android:id="@+id/btn_other4_delete"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/img_btn_delete"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wrapper_other5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <EditText
                        android:id="@+id/ed_other5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:layout_weight="2"
                        android:hint="Others 5"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:visibility="invisible"
                        android:textColor="@color/bg_black" />
                    
                    <ImageView
                        android:id="@+id/btn_other5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/img_btn_add" />

                    
                    <ImageView
                        android:id="@+id/btn_other5_delete"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:src="@drawable/img_btn_delete"
                         />
                </LinearLayout>

                <Button
                    android:id="@+id/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:background="@drawable/selector_blue"
                    android:padding="10dp"
                    android:text="Input Image"
                    android:textColor="@color/bg_white" />
            </LinearLayout>
        </ScrollView>

        <HorizontalScrollView
            android:id="@+id/wrapper_horizontalview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wrapper"
            android:visibility="invisible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp" >

                <ImageView
                    android:id="@+id/img_00"
                    android:layout_width="100dp"
                    android:layout_height="170dp"
                    android:padding="5dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_01"
                    android:layout_width="100dp"
                    android:layout_height="170dp"
                    android:padding="5dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="100dp"
                    android:layout_height="170dp"
                    android:padding="5dp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="100dp"
                    android:layout_height="170dp"
                    android:padding="5dp"
                    android:visibility="invisible" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</ScrollView>